---
import type { Note } from "../lib/storage";
import "../styles/theme.css";

interface Props {
  items: Note[];
  activeId?: string | null;
}
const { items = [], activeId = null } = Astro.props as Props;
---

<section class="list card" aria-label="Notes list">
  <ul class="items" role="list">
    {items.map((n) => (
      <li>
        <button class={`row ${activeId === n.id ? "active" : ""}`} data-id={n.id} type="button">
          <div class="title">{n.title || "Untitled"}</div>
          <div class="meta">
            <span class="badge">{new Date(n.updatedAt).toLocaleString()}</span>
            <span class="cat">{n.category ?? "General"}</span>
            <span class="delete" data-action="delete" aria-label={`Delete note ${n.title}`}>âœ•</span>
          </div>
        </button>
      </li>
    ))}
  </ul>
</section>

<style>
.list { display: flex; flex-direction: column; width: 100%; padding: 12px; }
.items { list-style: none; padding: 0; margin: 0; display: grid; gap: 6px; }

.row {
  width: 100%;
  text-align: left;
  display: grid;
  grid-template-columns: 1fr auto;
  gap: 8px;
  align-items: center;
  padding: 12px;
  border: 1px solid var(--border);
  background: var(--bg);
  border-radius: 12px;
  cursor: pointer;
}
.row:hover { box-shadow: var(--shadow-sm); }
.row.active {
  border-color: var(--color-primary);
  box-shadow: 0 0 0 4px rgba(55,65,81,0.12);
}

.title { font-weight: 600; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.meta { display: flex; align-items: center; gap: 10px; }
.meta .cat { color: var(--muted); font-size: 12px; }
.delete {
  color: var(--color-error);
  border: 1px solid transparent;
  border-radius: 8px;
  padding: 4px 8px;
}
.delete:hover { background: rgba(239,68,68,0.08); }

@media (max-width: 640px) {
  .meta .badge { display: none; }
}
</style>


