---
const title = "Ocean Notes";
---

<nav class="nav card" aria-label="Top Navigation">
  <div class="left">
    <div class="logo" aria-hidden="true">ðŸŒŠ</div>
    <div class="brand">
      <strong>{title}</strong>
      <span class="muted">Minimal notes</span>
    </div>
  </div>
  <div class="right">
    <slot name="actions" />
  </div>
</nav>

<style>
.nav {
  position: sticky;
  top: 0;
  z-index: 20;
  margin: 16px;
  padding: 12px 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  backdrop-filter: blur(8px);
}

.left { display: flex; align-items: center; gap: 12px; }
.logo {
  width: 36px; height: 36px;
  border-radius: 10px;
  display: grid; place-items: center;
  background: linear-gradient(135deg, var(--surface), var(--bg));
  border: 1px solid var(--border);
  box-shadow: var(--shadow-sm);
  font-size: 18px;
}
.brand { display: flex; flex-direction: column; line-height: 1.1; }
.brand strong { font-weight: 600; letter-spacing: 0.2px; }
.brand .muted { color: var(--muted); font-size: 12px; }

.right { display: flex; align-items: center; gap: 10px; }
</style>
